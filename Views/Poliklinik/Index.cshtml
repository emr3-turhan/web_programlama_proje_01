@{
}

@model IEnumerable<Poliklinik>

<h2>Poliklinik Listesi</h2>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AnaBilimDali)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnaBilimDali)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PoliklinikId">Detaylar</a> |
                    <a asp-action="Edit" asp-route-id="@item.PoliklinikId">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.PoliklinikId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

